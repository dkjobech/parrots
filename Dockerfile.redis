FROM redis:alpine

# Set working directory
WORKDIR /data

# Copy any custom Redis configuration if needed (optional)
# COPY redis.conf /usr/local/etc/redis/redis.conf

# Expose Redis port
EXPOSE 6379

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
    CMD redis-cli ping || exit 1

# Run Redis server
CMD ["redis-server"]

